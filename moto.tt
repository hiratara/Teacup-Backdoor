<link rel="stylesheet" href="includes/tooltips.css" type="text/css" 
media="screen" />
<script type="text/javascript">
function load_tooltip(){
  $$(".room_link").each( function(links) {
    new Tooltip(links, 
      {
        backgroundColor: "#FFF", 
        borderColor:     "#000", 
        textColor:       "#000", 
        textShadowColor: "#999"
      }
    );
  });
}
</script>
