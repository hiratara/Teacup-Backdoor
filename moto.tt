<table>
[% FOREACH R=ROOMS %]
[% IF loop.count % 3 == 1 %]<tr>[% END %]
<td class="room-info"> 
<div class="room-name">
<a href="[% R.URL %]" title="[% FOR L=R.LOGS.reverse %][% L.NAME | html %]「[% L.COMMENT | html %]」&#x0d;&#x0a;[% END %]" class="room_link">[% R.DISP %]</a>
</div>
<div class="members">
  [% FOREACH M=R.MEMBERS %]
  <span class="member-name">[% M %]</span>
  [%- IF ! loop.last %]・[% END %]
  [% END %]
